<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="68dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:src="@drawable/empty_photo" />

    <TextView
        android:id="@+id/season_episode_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/season_episode_number"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/image"
        android:text="TextView"
        android:textColor="@color/medium_grey" />

    <TextView
        android:id="@+id/episode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/season_episode_number"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/season_episode_number"
        android:text="TextView"
        android:textColor="@color/medium_grey"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/episode_title"
        android:layout_alignBottom="@+id/episode_title"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/episode_title"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/reply_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/season_episode_number"
        android:layout_below="@id/season_episode_number"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/image"
        android:text="[REPLIER] said:"
        android:textSize="@dimen/font_size_medium_small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/season_episode_number"
        android:layout_below="@id/reply_user"
        android:layout_marginRight="6dp"
        android:text="TextView"
        android:textSize="@dimen/font_size_medium" />

    <TextView
        android:id="@+id/reply_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/reply_user"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:text="TextView"
        android:textColor="@color/medium_grey" />
    
    <TextView
        android:id="@+id/comment_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/season_episode_number"
        android:layout_below="@id/reply_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:text="@string/in_reply_to_text"
        android:textSize="@dimen/font_size_medium_small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/comment_user"
        android:layout_below="@id/comment_user"
        android:text="TextView"
        android:textSize="@dimen/font_size_medium" />
    
    <TextView
        android:id="@+id/comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/comment_user"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:text="TextView"
        android:textColor="@color/medium_grey" />

    <TextView
        android:id="@+id/reviewer_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/review_title"
        android:layout_alignBottom="@+id/review_title"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/review_title"
        android:text="TextView"
        android:textColor="@color/medium_grey" />
    
</RelativeLayout>