<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comments_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_grey" >

    <TextView
        android:id="@+id/comments_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/comments_gap"
        android:text="@string/comments_heading_text"
        android:textColor="@color/medium_grey"
        android:textSize="@dimen/font_size_large" />

    <ListView
        android:id="@+id/comments_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comments_heading"
        android:layout_marginLeft="@dimen/comments_gap" >
    </ListView>

</RelativeLayout>